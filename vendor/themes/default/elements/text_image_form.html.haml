.clear

- form_for [:admin, @element], :multipart => true do
  = hidden_field_tag :element_name, @element.name
  
  .first.span-18
    .box
      %h3 Input content
      %div{ :style => 'text-align: center;' }= text_area_tag 'element[text]', @origin.data['text'], :class => 'span-17'
  .last.span-6
    .box
      %h3 Select image
      - themed_page.images.each do |image|
        %div
          = radio_button_tag 'element[image]', image.attachable.url(nil, false), @origin.data['image'] == image.attachable.url(nil, false)
          = link_to image.attachable_file_name, image.attachable.to_s

  .clear

  = submit_tag 'Save'
  or
  = link_to 'Cancel', admin_themed_page_path(themed_page)

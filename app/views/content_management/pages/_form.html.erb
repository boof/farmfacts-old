<%= error_messages_for 'page', :object => form.object %>

<div>
	<label for="page_title">Title</label><br />
	<%= form.text_field :title, :size => 60 %>
</div>
<div>
	<label for="page_name">Name</label><br />
	<%= form.text_field :name %>
</div>
<div>
	<label for="page_body_markdown">Body (<%= link_to 'Markdown', 'http://daringfireball.net/projects/markdown/syntax' %>)</label><br />
	<%= form.text_area :body_markdown, :cols => 78 %>
</div>

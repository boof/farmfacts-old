!!! Strict

%html
  %head
    <meta content="en" http-equiv="content-language" />
    <meta content="text/html; charset=utf-8" http-equiv="content-type" />

    %title&= current.title

    <link rel="stylesheet" href="/stylesheets/blueprint/screen.css?1235338633" type="text/css" media="screen, projection" />
    <link rel="stylesheet" href="/stylesheets/blueprint/print.css?1235338633" type="text/css" media="print" />
    <!--[if IE]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css?1235338633" type="text/css" media="screen, projection" /><![endif]-->
    <link rel="stylesheet" href="/stylesheets/application.css?1235338633" type="text/css" media="screen, projection" />

  %body
    #top.container
      - render_navigation :class => 'prepend-top', :style => 'float: left;' do
        .column= link_to 'Pages', admin_pages_path
        .column= link_to 'Themes', admin_themes_path
        .column= link_to 'Categories', admin_categories_path
        .column= link_to 'Users', admin_users_path
      - render_navigation :class => 'prepend-top', :style => 'float: right;' do
        .column= link_to 'Profile', edit_admin_user_path(current.user, :return_to => params[:return_to] || request.path)
        .column= link_to 'Settings', admin_configure_path('FarmFacts', :return_to => params[:return_to] || request.path)
        .column= link_to 'Logout', logout_path
      .clear

      .prepend-top
        %h1&= current.title
      %hr.top.bottom
      = yield
    #bottom

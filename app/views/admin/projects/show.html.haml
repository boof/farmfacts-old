.box
  - render_navigation :style => 'float: left;', :class => '' do
    .column= link_to '&laquo; Projects', admin_projects_path
    .column= link_to 'Edit', edit_admin_project_path(@project)
    .column= link_to 'Attachments', :anchor => 'attachments'
    .column= link_to 'Roles', :anchor => 'roles'
    - if @project.website
      .column= link_to 'Website &raquo;', @project.website
  - render_navigation :style => 'float: right;', :class => 'span-6' do
    - unless @project.categories.empty?
      - for category in @project.categories
        .column= link_to h(category), admin_category_path(category.id)
    - else
      .column None
  - render_navigation :style => 'float: right;', :class => '' do
    .column.loud Categories:
  %br.clear

- unless @project.teaser.blank?
  %h2.bottom Teaser
  .box= textile @project.teaser

.prepend-top.clear= render_attachment_controls_for @project
.prepend-top= render :partial => @project.roles.all(:include => :user, :order => 'users.name'), :layout => 'roles'

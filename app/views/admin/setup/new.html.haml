!!! Strict

%html
  %head
    <meta content="en" http-equiv="content-language" />
    <meta content="text/html; charset=utf-8" http-equiv="content-type" />

    %title&= current.title

    <link rel="stylesheet" href="/stylesheets/blueprint/screen.css?1235338633" type="text/css" media="screen, projection" />
    <link rel="stylesheet" href="/stylesheets/blueprint/print.css?1235338633" type="text/css" media="print" />
    <!--[if IE]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css?1235338633" type="text/css" media="screen, projection" /><![endif]-->
    <link rel="stylesheet" href="/stylesheets/application.css?1235338633" type="text/css" media="screen, projection" />

  %body
    #top.container
      .prepend-top
        %h1&= current.title
      %hr.top
      - form_for :user, current.user, :url => admin_setup_path do |user_form|
        = error_messages_for 'user', :object => current.user

        - user_form.fields_for :login do |login_form|
          .prepend-top
            = login_form.label :username, 'Username'
            %div= login_form.text_field :username, :class => 'span-12 title'
          .append-bottom
            .first.column
              = login_form.label :password
              %div= login_form.password_field :password, :class => 'span-12 text'
            .last.column
              = login_form.label :password_confirmation
              %div= login_form.password_field :password_confirmation, :class => 'span-12 text'
            %br.clear

        = submit_tag 'Create Initial User'

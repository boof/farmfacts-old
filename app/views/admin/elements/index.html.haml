.box
  - render_navigation :style => 'float: left;', :class => '' do
    .column= link_to '&laquo; Pages', admin_pages_path
    .column= link_to 'Edit', edit_admin_themed_page_path(@themed_page)
    .column= link_to 'Attachments', :anchor => 'attachments'
  - render_navigation :style => 'float: right;', :class => 'span-6' do
    - unless @themed_page.categories.empty?
      - for category in @themed_page.categories
        .column= link_to h(category), admin_category_path(category.id)
    - else
      .column None
  - render_navigation :style => 'float: right;', :class => '' do
    .column.loud Categories:
  %br.clear

%h3 Page Builder

.first.column.span-20
  %h4 Element List
  - @themed_page.elements.each do |element|
    %div= @theme.thumbnail_for element
.last.column.span-4
  %h4 Controls
  .box{:style => 'text-align: center;'}= link_to 'Preview', preview_admin_themed_page_path(@themed_page)
  .box{:style => 'text-align: center;'}= link_to 'Close', admin_pages_path
  - @theme.elements.each do |element|
    %div= link_to @theme.icon_for(element), new_admin_themed_page_element_path(@themed_page, :element_name => element.name)

.clear

.prepend-top.clear= render_attachment_controls_for @themed_page

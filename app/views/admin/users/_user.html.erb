<% content_tag_for :tr, user do %>
<td class="cmUserName"><%= link_to h(user.name), edit_admin_user_path(user) -%></td>
<td class="cmUserEMail"><%= mail_to user.email, h(user.email) -%></td>
<td class="cmAction"><%= link_to image_tag('icons/page_delete.gif'), admin_user_path(user), :method => :delete, :confirm => "Delete '#{ user.name }'?" -%></td>
<% end %>

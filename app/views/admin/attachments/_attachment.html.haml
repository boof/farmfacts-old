- content_tag_for :tr, attachment, :class => eo(attachment_counter) do
  %td.span-8.file_name= link_to attachment.attachable_file_name, attachment.attachable.url
  %td.span-6.move_up_and_down
    - unless attachment.first? 
      = link_to 'Move up', move_up_admin_themed_page_attachment_path(@themed_page, attachment, :return_to => admin_themed_page_path(@themed_page)), :method => :put
    - unless attachment.last?
      = link_to 'Move down', move_down_admin_themed_page_attachment_path(@themed_page, attachment, :return_to => admin_themed_page_path(@themed_page)), :method => :put
  %td.span-2.file_size= humanized_size attachment.attachable_file_size
  %td.span-4.content_type= attachment.attachable_content_type
  %td.span-3.uploaded= attachment.attachable_updated_at.to_formatted_s(:short)
  %td.last.span-1.action= check_box_tag 'attachment_ids[]', attachment.id

- content_tag_for :tr, navigation, :class => eo(navigation_counter) do
  %td.span-13.label
    - if navigation.parent
      = navigation.parent.route.map! { |n| link_to h(n.label), admin_browse_navigation_path(:ids => n.coords) } * ' => '
      \=>
    = link_to h(navigation.label), admin_browse_navigation_path(:ids => navigation.coords)
  %td.span-11.path= link_to h(navigation.path), navigation.path

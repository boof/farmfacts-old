.box
  - render_navigation :style => 'float: left;', :class => '' do
    .column= link_to '&laquo; Navigations', admin_navigations_path
    .column= link_to '&laquo; Navigation New', new_admin_navigation_path(:parent_id => @navigation)
  %br.clear

%table#navigations
  %thead
    %tr
      %th.span-8.label Label
      %th.span-16.path Path
  %tbody
    - if @navigation.parent_id
      - content_tag_for :tr, @navigation, :class => 'odd' do
        %td.span-24.label{ :colspan => 2 }= link_to '..', admin_navigation_path(:ids => @navigation.parent.coords)
    = render :partial => 'navigation', :collection => @navigation.navigations

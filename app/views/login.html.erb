<% form_for @login, :url => auth_path do |form| %>
	<%= hidden_field_tag :return_uri, @login.return_uri %>

	<div>
		<label for="login_username">Username</label>
		<input value="<%= h(@login.username) %>" id="login_username" name="login[username]" size="30" type="text" />
	</div>
	<div>
		<label for="login_password">Password</label>
		<input id="login_password" name="login[password]" size="30" type="password" />
	</div>
	
	<p><input name="commit" type="submit" value="Authenticate" /></p>
<% end %>

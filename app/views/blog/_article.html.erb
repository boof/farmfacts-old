<% div_for article do %>
	<div class="articleHeader">
		<h3><%= link_to article.title, article_by_ident_path(article) -%></h3>
		<%= article.published_at(current_timezone).to_s(:long_ordinal) -%> by <%= mail_to article.author.email, article.author, :encode => :hex %>
	</div>
	<div class="articleIntroduction">
		<%=markdown article.introduction + " [more...](#{ article_by_ident_path article })" -%>
	</div>
	<div class="articleFooter">
		<%= mail_to article.author.email, article.author, :encode => :hex %> |
		<%= article.published_at(current_timezone).to_s(:long_ordinal) -%> |
		<%= link_to "#{ article.comments.count } comments &raquo;", article_by_ident_path(article, :anchor => 'comments') %>
	</div>
<% end %>
